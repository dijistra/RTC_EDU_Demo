<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_user_avatar"
                style="@style/UserAvatarItemTv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/color_505050"
                tools:text="B" />

            <include
                android:id="@+id/profile_user_name"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_privacy_agreement"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_user_agreement"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_disclaimer"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_permission_list"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_license_list"
                layout="@layout/layout_meeting_item_arrow" />

            <include
                android:id="@+id/profile_demo_version"
                layout="@layout/layout_meeting_item_value" />

            <include
                android:id="@+id/profile_sdk_version"
                layout="@layout/layout_meeting_item_value" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/profile_delete_account"
        style="@style/MeetingLayoutItemLeftText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bg_logout"
        android:gravity="center"
        android:text="@string/delete_account" />

    <TextView
        android:id="@+id/profile_exit_login"
        style="@style/MeetingLayoutItemLeftText"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_logout"
        android:gravity="center"
        android:text="@string/exit_login" />
</FrameLayout>