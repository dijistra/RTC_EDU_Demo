<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottom_bar_background"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/empty_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_empty_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/waiting_teacher"
            android:textColor="#80838A"
            android:textSize="12sp" />

    </RelativeLayout>
</FrameLayout>