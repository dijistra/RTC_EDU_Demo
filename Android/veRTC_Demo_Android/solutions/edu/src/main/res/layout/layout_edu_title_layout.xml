<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/layout_edu_title_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:src="@drawable/back_arrow" />

    <TextView
        android:id="@+id/layout_edu_title_class_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="bytedance的课堂" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="#4E5969" />

    <TextView
        android:id="@+id/layout_edu_title_class_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="课堂ID:123456789" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="#4E5969" />

    <TextView
        android:id="@+id/layout_edu_title_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        tools:text="00:00:00" />

    <ImageView
        android:id="@+id/layout_edu_title_record_status"
        android:layout_width="33dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/record_status" />
</LinearLayout>