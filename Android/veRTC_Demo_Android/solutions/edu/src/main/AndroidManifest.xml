<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.volcengine.vertcdemo.edu">

    <application>
        <activity
            android:name=".feature.classroomlist.ClassRoomListActivity"
            android:exported="false"
            android:icon="@drawable/ic_online_course"
            android:label="@string/scene_online_course"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            tools:ignore="IntentFilterExportedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="${applicationId}.category.SCENE" />
            </intent-filter>

            <meta-data
                android:name="scene_name_abbr"
                android:value="edu" />
        </activity>
        <activity
            android:name=".feature.classhistory.ClassHistoryListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.lecturehall.LectureClassRoomMainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".feature.breakoutclass.BreakoutClassRoomMainActivity"
            android:screenOrientation="landscape" />
    </application>
</manifest>