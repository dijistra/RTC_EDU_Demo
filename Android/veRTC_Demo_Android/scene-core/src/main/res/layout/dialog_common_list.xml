<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/dialog_list_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_list_dialog_margin"
        android:layout_marginRight="@dimen/common_list_dialog_margin"
        android:background="@drawable/common_dialog_bg">

        <LinearLayout
            android:id="@+id/dialog_list_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </ScrollView>

    <Button
        android:id="@+id/dialog_confirm_btn"
        style="@style/ButtonMdStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/common_list_dialog_margin"
        android:layout_marginTop="@dimen/common_dialog_list_btn_margin_bottom"
        android:layout_marginRight="@dimen/common_list_dialog_margin"
        android:layout_marginBottom="@dimen/common_dialog_list_btn_margin_bottom"
        android:text="@string/common_confirm" />

</LinearLayout>